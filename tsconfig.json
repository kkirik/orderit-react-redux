{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es6", "es7", "esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build/",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "es2017",
    "paths": {
      "~*": ["./*"]
    }
  },
  "include": ["src/**/*"]
}
